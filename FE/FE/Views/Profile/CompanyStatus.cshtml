@model FE.Models.StatusCompany

@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
}

<div class="modal-content">
    <div class="modal-header">
        <button class="close" data-dismiss="modal" area-hidden="true">X</button>
        <h4>Add Settings</h4>
    </div>
    <div class="modal-body">
            @using (Html.BeginForm("CompanyStatus", "Profile", new { company = ViewBag.company }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Add Settings</h4>
                <hr />
                @Html.ValidationSummary(true)


                <div class="form-group">
                    <div class="col-md-10">
                        Состояние компании вкл @Html.CheckBoxFor(m => m.IsActive, new { @class = "form-control" }) ?
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-10">
                        Показывать в гарантии  @Html.CheckBoxFor(m => m.ShowInBottom, new { @class = "form-control" }) ?
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        Показывать в спецразмещении @Html.CheckBoxFor(m => m.ShowInTop, new { @class = "form-control" }) ?
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-10">
                        Максимальная цена @Html.TextBoxFor(m => m.MaxPrice, new { @class = "form-control" }) ?
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="L" class="btn btn-default" />
                    </div>
                </div>
            }

    </div>
</div>

